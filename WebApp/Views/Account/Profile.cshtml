@model LoginViewModel
@{
    ViewData["Title"] = "Profile";
}


<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2"> @ViewData["Title"]</h1>
    </div>
</div>

<div class="row mt-4">
    <div class="col-6 offset-3">

        <div class="mb-4">
            <div asp-validation-summary="All" class="text-danger small"></div>
        </div>

        <form method="post" asp-action="ProfileChangeFullName">
            <div class="form-group">
                <label class="form-label small">Name Surname</label>
                <div class="input-group mb-3">
                    <input name="fullname" type="text" class="form-control" placeholder="John Doe" value="@ViewData["FullName"]">
                    <button class="btn btn-secondary" type="submit">Save  <i class="fa-regular fa-floppy-disk"></i></button>
                </div>
            </div>
        </form>

        <form method="post" asp-action="ProfileChangePassword">
            <div class="form-group">
                <label class="form-label small">New Password</label>
                <div class="input-group">
                    <input name="password" type="password" class="form-control" placeholder="p@sSw*Rd!">
                    <button class="btn btn-secondary" type="submit">Save  <i class="fa-regular fa-floppy-disk"></i></button>
                </div>
                @if (ViewData["result"] != null && ViewData["result"] == "ProfileChanged")
                {
                    <span class="text-success small">Password updated</span>
                }
            </div>
        </form>

    </div>
</div>


@section Scripts{

    @if (ViewData["result"] != null && ViewData["result"] == "ProfileChanged")
    {
        <script>
            toastr["success"]("Şifreniz değiştirilmiştir.", "Başarılı!")
        </script>
    }
}